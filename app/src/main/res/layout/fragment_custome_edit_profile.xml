<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            android:background="@drawable/skin_gradient"/>

        <include
            android:id="@+id/toolbar"
            layout="@layout/include_toolbar"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatarCEP"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_4"
            android:scaleType="centerCrop"/>

        <EditText
            android:id="@+id/edtNameCEP"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/imgAvatarCEP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/ic_1"
            android:hint="@string/auth_name"
            android:textColorHint="@color/colorText"/>

        <EditText
            android:id="@+id/edtLastNameCEP"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/edtNameCEP"
            app:layout_constraintStart_toStartOf="@id/edtNameCEP"
            app:layout_constraintEnd_toEndOf="@id/edtNameCEP"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_1"
            android:hint="@string/auth_last_name"
            android:textColorHint="@color/colorText"/>

        <TextView
            android:id="@+id/txtAddressCEP"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/edtLastNameCEP"
            app:layout_constraintStart_toStartOf="@id/edtNameCEP"
            app:layout_constraintEnd_toEndOf="@id/edtNameCEP"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="@string/auth_city"
            android:textColorHint="@color/colorText"
            app:drawableStartCompat="@drawable/ic_5"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnSaveCEP"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            app:layout_constraintTop_toBottomOf="@id/txtAddressCEP"
            app:layout_constraintStart_toStartOf="@id/edtNameCEP"
            app:layout_constraintEnd_toEndOf="@id/edtNameCEP"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="60dp"
            android:text="@string/save"/>

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            app:layout_constraintTop_toBottomOf="@id/btnSaveCEP"
            app:layout_constraintStart_toStartOf="@id/btnSaveCEP"
            app:layout_constraintEnd_toEndOf="@id/btnSaveCEP"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:text="@string/skip"
            android:background="@drawable/skin_grey_corner"
            android:textColor="@color/colorText"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>