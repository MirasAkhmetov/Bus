<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="3dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6"/>

        <ImageView
            android:id="@+id/imgAvatarTravel"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txtTransportNameTravel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgMapTravel"
            android:layout_marginEnd="5dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgMapTravel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_54"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="5dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtBusType36Travel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sleeping_room"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtTransportNameTravel"
            app:layout_constraintStart_toStartOf="@id/txtTransportNameTravel"
            app:layout_constraintEnd_toEndOf="@id/txtTransportNameTravel"
            android:textStyle="italic"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/txtPlaceTravel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtBusType36Travel"
            app:layout_constraintBottom_toTopOf="@id/txtDateTravel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="16sp"
            android:textColor="@color/colorGrey"
            android:text="@string/order_free_place_exist"/>

        <TextView
            android:id="@+id/txtDateTravel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtPlaceTravel"
            app:layout_constraintBottom_toTopOf="@id/txtLocationTravel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/txtLocationTravel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/imgAvatarTravel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorGrey"
            app:drawableStartCompat="@drawable/ic_20" />

        <Button
            android:id="@+id/btnBookTravel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/text"
            app:layout_constraintBottom_toBottomOf="@id/txtPriceTravel"
            app:layout_constraintStart_toStartOf="@id/txtLocationTravel"
            app:layout_constraintEnd_toEndOf="@id/txtLocationTravel"
            android:layout_marginEnd="5dp"
            android:text="@string/order_book"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtLocationTravel"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:text="@string/order_price_one_place"
            android:gravity="end"
            android:textSize="13sp"
            android:textColor="@color/colorGrey"/>

        <TextView
            android:id="@+id/txtPriceTravel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            android:textSize="18sp"
            android:textColor="@color/colorBlueLight"
            android:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>