<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootOD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentDark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/skin_white_top_corner">

        <TextView
            android:id="@+id/txtTransportTypeOD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtTimeFromOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtTransportTypeOD"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeOD"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDateFromOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txtTimeFromOD"
            app:layout_constraintStart_toEndOf="@id/txtTimeFromOD"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorGrey"/>

        <TextView
            android:id="@+id/txtCityFromOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtDateFromOD"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeOD"
            android:textColor="@color/colorGrey"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtCityFromOD"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeOD"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorGrey"/>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="@id/txtDuration"
            app:layout_constraintBottom_toBottomOf="@id/txtDuration"
            app:layout_constraintStart_toEndOf="@id/txtDuration"
            app:layout_constraintEnd_toStartOf="@id/image"
            android:layout_margin="15dp"
            android:background="@color/colorGrey"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txtDuration"
            app:layout_constraintBottom_toBottomOf="@id/txtDuration"
            app:layout_constraintEnd_toEndOf="@id/txtTransportTypeOD"
            android:src="@drawable/ic_25"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="20dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintStart_toEndOf="@id/txtDuration"
            app:layout_constraintEnd_toStartOf="@id/divider"
            android:src="@drawable/ic_26"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerStationOD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image1"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeOD"
            app:layout_constraintEnd_toEndOf="@id/txtTransportTypeOD"
            android:layout_marginTop="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:id="@+id/txtTimeToOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recyclerStationOD"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeOD"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDateToOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txtTimeToOD"
            app:layout_constraintStart_toEndOf="@id/txtTimeToOD"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorGrey"/>

        <TextView
            android:id="@+id/txtCityToOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtDateToOD"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeOD"
            android:textColor="@color/colorGrey"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtPriceToOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txtTimeToOD"
            app:layout_constraintEnd_toEndOf="@id/txtTransportTypeOD"
            android:textColor="@color/colorBlueLight"
            android:textSize="20sp" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapViewOD"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/txtPriceToOD"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeOD"
            app:layout_constraintEnd_toEndOf="@id/txtTransportTypeOD"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mapViewOD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeOD"
            app:layout_constraintEnd_toEndOf="@id/txtTransportTypeOD"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/imgTelevisionOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgAirConditionOD"
                    android:src="@drawable/ic_28"/>

                <TextView
                    android:id="@+id/txtTelevisionOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/imgTelevisionOD"
                    app:layout_constraintStart_toStartOf="@id/imgTelevisionOD"
                    app:layout_constraintEnd_toEndOf="@id/imgTelevisionOD"
                    android:text="@string/order_television"
                    android:textSize="12sp"
                    android:textColor="@color/colorGreyDark"/>

                <ImageView
                    android:id="@+id/imgAirConditionOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imgTelevisionOD"
                    app:layout_constraintEnd_toStartOf="@id/imgBaggageOD"
                    android:src="@drawable/ic_29"/>

                <TextView
                    android:id="@+id/txtAirConditionOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/imgAirConditionOD"
                    app:layout_constraintStart_toStartOf="@id/imgAirConditionOD"
                    app:layout_constraintEnd_toEndOf="@id/imgAirConditionOD"
                    android:text="@string/order_air_condition"
                    android:textSize="12sp"
                    android:textColor="@color/colorGreyDark"/>

                <ImageView
                    android:id="@+id/imgBaggageOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imgAirConditionOD"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_30"/>

                <TextView
                    android:id="@+id/txtBaggageOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/imgBaggageOD"
                    app:layout_constraintStart_toStartOf="@id/imgBaggageOD"
                    app:layout_constraintEnd_toEndOf="@id/imgBaggageOD"
                    android:text="@string/order_baggage"
                    android:textSize="12sp"
                    android:textColor="@color/colorGreyDark"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>