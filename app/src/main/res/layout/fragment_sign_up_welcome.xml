<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintVertical_bias="0.25"
            android:textSize="22sp"
            android:text="@string/auth_welcome"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/colorGrey"
            android:text="@string/auth_create_text"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerTypeSUW"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="50dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:background="@drawable/skin_white"
            android:elevation="7dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/spinnerTypeSUW"
            app:layout_constraintBottom_toBottomOf="@id/spinnerTypeSUW"
            app:layout_constraintStart_toStartOf="@id/spinnerTypeSUW"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_1"
            android:translationZ="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/spinnerTypeSUW"
            app:layout_constraintBottom_toBottomOf="@id/spinnerTypeSUW"
            app:layout_constraintEnd_toEndOf="@id/spinnerTypeSUW"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_3"
            android:translationZ="10dp"/>

        <com.santalu.maskara.widget.MaskEditText
            android:id="@+id/edtPhoneSUW"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/spinnerTypeSUW"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_1"
            android:textColorHint="@color/colorText"
            android:hint="@string/auth_phone"
            app:mask="8 (___) ___ __ __"
            app:maskCharacter="_"
            app:maskStyle="normal"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtPasswordSUW"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/edtPhoneSUW"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_2"
            android:hint="@string/auth_password"
            android:textColorHint="@color/colorText"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/edtConfirmPasswordSUW"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/edtPasswordSUW"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_2"
            android:hint="@string/auth_confirm_password"
            android:textColorHint="@color/colorText"
            android:inputType="textPassword"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkboxPolicySUW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edtConfirmPasswordSUW"
            app:layout_constraintStart_toStartOf="@id/text"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtPolicySUW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/checkboxPolicySUW"
            app:layout_constraintBottom_toBottomOf="@id/checkboxPolicySUW"
            app:layout_constraintStart_toEndOf="@id/checkboxPolicySUW"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:text="@string/auth_policy"
            android:textColor="@color/colorBlueLight"/>

        <Button
            android:id="@+id/btnNextSUW"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            app:layout_constraintTop_toBottomOf="@id/checkboxPolicySUW"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"
            android:text="@string/next"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>