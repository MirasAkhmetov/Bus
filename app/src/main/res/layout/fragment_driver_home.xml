<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <View
            android:id="@+id/viewBg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider"
            android:background="@drawable/skin_gradient"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txtFromDriverHome"
            android:src="@drawable/img_3"/>

        <include
            android:id="@+id/toolbar"
            layout="@layout/include_toolbar"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorWhite"
            android:text="@string/order_set_city"
            app:drawableStartCompat="@drawable/ic_14" />

        <TextView
            android:id="@+id/txtFromDriverHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/skin_blue_corner"
            android:textColorHint="@color/colorWhite"
            android:hint="@string/order_from"
            android:textColor="@color/colorWhite"
            app:drawableStartCompat="@drawable/ic_12" />

        <TextView
            android:id="@+id/txtToDriverHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/txtFromDriverHome"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/skin_blue_corner"
            android:textColorHint="@color/colorWhite"
            android:hint="@string/order_to"
            android:textColor="@color/colorWhite"
            app:drawableStartCompat="@drawable/ic_13" />

        <ImageView
            android:id="@+id/imgChangeFromToDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtFromDriverHome"
            app:layout_constraintBottom_toTopOf="@id/txtToDriverHome"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_11"
            android:translationZ="15dp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/txtToDriverHome"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txtInactiveDriverHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:layout_marginTop="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/auth_inactive_disable"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_9"
            android:background="@color/colorRed"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/txtDateFromDriverHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/txtInactiveDriverHome"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="15dp"
            android:background="@drawable/skin_white_corner"
            android:textColorHint="@color/colorText"
            android:hint="@string/order_choose_date_from"
            android:textColor="@color/colorText"
            app:drawableStartCompat="@drawable/ic_16"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/txtDateToDriverHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/txtDateFromDriverHome"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="15dp"
            android:background="@drawable/skin_white_corner"
            android:textColorHint="@color/colorText"
            android:hint="@string/order_choose_date_to"
            android:textColor="@color/colorText"
            app:drawableStartCompat="@drawable/ic_16"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:elevation="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDateDriverHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtDateToDriverHome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recyclerDateDriverHome"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="15dp"
            android:text="@string/order_price_one_place"/>

        <TextView
            android:id="@+id/text21"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text2"
            app:layout_constraintStart_toStartOf="@id/text2"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:textColor="@color/colorGrey"
            android:text="@string/car_36_description"/>


        <EditText
            android:id="@+id/edtFromDriverHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toBottomOf="@id/text21"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:hint="@string/order_price_from"
            android:textColorHint="@color/colorAccent"
            android:inputType="number"/>

        <EditText
            android:id="@+id/edtToDriverHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toTopOf="@id/edtFromDriverHome"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toStartOf="@id/guideline1"
            android:layout_marginStart="5dp"
            android:hint="@string/order_price_to"
            android:textColorHint="@color/colorAccent"
            android:inputType="number"/>

        <Button
            android:id="@+id/btnReadyDriverHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/edt_height"
            app:layout_constraintTop_toTopOf="@id/edtFromDriverHome"
            app:layout_constraintStart_toEndOf="@id/guideline1"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginStart="10dp"
            android:text="@string/ready"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPlaceDriverHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edtFromDriverHome"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_price"/>

        <Button
            android:id="@+id/btnSeveralDayDriverHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            app:layout_constraintTop_toBottomOf="@id/recyclerPlaceDriverHome"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/text"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="5dp"
            android:text="@string/several_days"
            android:background="@drawable/skin_grey_corner"
            android:textColor="@color/colorAccent"/>

        <Button
            android:id="@+id/btnNextDriverHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            app:layout_constraintTop_toBottomOf="@id/recyclerPlaceDriverHome"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintEnd_toEndOf="@id/text"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="5dp"
            android:text="@string/next"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
