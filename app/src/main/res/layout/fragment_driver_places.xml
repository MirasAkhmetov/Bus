<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            android:background="@drawable/skin_gradient"/>

        <include
            android:id="@+id/toolbar"
            layout="@layout/include_toolbar"/>

        <TextView
            android:id="@+id/txtTransportTypeDriverPlaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDateTypeDriverPlaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtTransportTypeDriverPlaces"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeDriverPlaces"
            app:layout_constraintEnd_toEndOf="@id/txtTransportTypeDriverPlaces"
            android:textColor="@color/colorGrey"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDriverPlaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtDateTypeDriverPlaces"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeDriverPlaces"
            app:layout_constraintEnd_toEndOf="@id/txtTransportTypeDriverPlaces"
            android:layout_marginTop="15dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="6"
            android:nestedScrollingEnabled="false"/>
        
        <Button
            android:id="@+id/btnPublishDriverPlaces"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            app:layout_constraintTop_toBottomOf="@id/recyclerDriverPlaces"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/txtTransportTypeDriverPlaces"
            app:layout_constraintEnd_toEndOf="@id/txtTransportTypeDriverPlaces"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/booking_publish"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>