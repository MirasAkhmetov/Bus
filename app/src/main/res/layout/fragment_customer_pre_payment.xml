                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:text="@string/order_numver_kaspi"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_9" />

            <ImageView
                android:id="@+id/imgKaspi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_kaspi"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/txtTitleNumberKaspi"
                app:layout_constraintTop_toBottomOf="@id/txtTitleNumberKaspi"/>
            <TextView
                android:id="@+id/txtNumberKaspi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/imgKaspi"
                app:layout_constraintTop_toTopOf="@id/imgKaspi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/imgKaspi"
                android:textStyle="bold"
                android:textSize="16sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


