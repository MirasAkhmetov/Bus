<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            android:background="@drawable/skin_gradient"/>

        <include
            android:id="@+id/toolbar"
            layout="@layout/include_toolbar"/>


        <ImageView
            android:id="@+id/imgAvatarCPP"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/txtNameCPP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imgAvatarCPP"
            app:layout_constraintBottom_toBottomOf="@id/imgAvatarCPP"
            app:layout_constraintStart_toEndOf="@id/imgAvatarCPP"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"/>


         <androidx.cardview.widget.CardView
             android:id="@+id/cardFromToCity"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/imgAvatarCPP"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="20dp"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp"
             app:cardElevation="3dp"
             app:cardCornerRadius="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtFromCityCPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/viewFromTo"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtFromStationCPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@id/txtFromCityCPP"
                    app:layout_constraintStart_toStartOf="@id/txtFromCityCPP"
                    app:layout_constraintEnd_toEndOf="@id/txtFromCityCPP"
                    android:textColor="@color/colorGrey"/>

                <TextView
                    android:id="@+id/txtFromTimeCPP"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="8dp"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/txtFromCityCPP"
                    app:layout_constraintStart_toStartOf="@+id/txtFromCityCPP"
                    app:layout_constraintTop_toBottomOf="@id/txtFromStationCPP" />

                <TextView
                    android:id="@+id/txtFromDateCPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/txtFromTimeCPP"
                    app:layout_constraintStart_toStartOf="@id/txtFromCityCPP"
                    app:layout_constraintEnd_toEndOf="@id/txtFromCityCPP"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/colorGreyDark"/>

                <View
                    android:id="@+id/viewFromTo"
                    android:layout_width="100dp"
                    android:layout_height="3dp"
                    android:background="@color/colorGreyDark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"/>

                <TextView
                    android:id="@+id/txtDurationRoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/duration_road"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/viewFromTo"
                    app:layout_constraintStart_toStartOf="@id/viewFromTo"
                    app:layout_constraintTop_toBottomOf="@id/viewFromTo" />

                <TextView
                    android:id="@+id/txtToCityCPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtFromCityCPP"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/viewFromTo"
                    app:layout_constraintTop_toTopOf="@+id/txtFromCityCPP" />

                <TextView
                    android:id="@+id/txtToStationCPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/txtFromStationCPP"
                    app:layout_constraintEnd_toEndOf="@id/txtToCityCPP"
                    app:layout_constraintStart_toStartOf="@id/txtToCityCPP"
                    app:layout_constraintTop_toTopOf="@+id/txtFromStationCPP" />


                <TextView
                    android:id="@+id/txtToTimeCPP"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtFromTimeCPP"
                    app:layout_constraintEnd_toEndOf="@+id/txtToCityCPP"
                    app:layout_constraintStart_toStartOf="@+id/txtToCityCPP"
                    app:layout_constraintTop_toTopOf="@+id/txtFromTimeCPP" />

                <TextView
                    android:id="@+id/txtToDateCPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorGreyDark"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtFromDateCPP"
                    app:layout_constraintEnd_toEndOf="@id/txtToCityCPP"
                    app:layout_constraintStart_toStartOf="@id/txtToCityCPP"
                    app:layout_constraintTop_toTopOf="@+id/txtFromDateCPP" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPlace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cardFromToCity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/txtTitleYourPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="18sp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:text="@string/order_id_place" />


                <TextView
                    android:id="@+id/txtPlaceIdCPP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/txtTitleYourPlace"
                    app:layout_constraintStart_toStartOf="@id/txtTitleYourPlace"
                    app:layout_constraintEnd_toEndOf="@id/txtTitleYourPlace"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtTitleReserveNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="18sp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/txtPlaceIdCPP"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:text="@string/order_state_number" />


                <TextView
                    android:id="@+id/txtFreePlacesCPP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/txtTitleReserveNumber"
                    app:layout_constraintStart_toStartOf="@id/txtTitleReserveNumber"
                    app:layout_constraintEnd_toEndOf="@id/txtTitleReserveNumber"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtFreePlacesCPP"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingHorizontal="15dp"
                    android:text="@string/order_transfer_info"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_9"
                    android:background="@color/colorGreyLight"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

