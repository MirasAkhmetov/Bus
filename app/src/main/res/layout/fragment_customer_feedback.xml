<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/skin_gradient"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabTextAppearance="@style/CustomerTabStyle"
        app:tabGravity="fill"
        app:tabInlineLabel="true"
        app:tabMode="fixed"
        app:tabTextColor="@color/colorText"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardThreeFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutFeedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/carNumberFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="200 OOO 02"
                android:background="@drawable/background_blue_rounded"
                android:textSize="16sp"
                android:padding="5dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/ratingFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_star_rate_24"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:background="@color/colorGreenNew"
                android:padding="5dp"
                android:text="4,5"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBarOne"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="60"
                android:progressDrawable="@drawable/custom_progressbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carNumberFeedback" />


            <TextView
                android:id="@+id/txtProgressOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="4,6"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/progressBarOne"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:layout_constraintBottom_toBottomOf="@+id/progressBarOne"
                app:layout_constraintEnd_toEndOf="@+id/progressBarOne"
                app:layout_constraintStart_toStartOf="@+id/progressBarOne"
                app:layout_constraintTop_toBottomOf="@+id/carNumberFeedback" />

            <TextView
                android:text="Чистота"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/progressBarOne"
                app:layout_constraintEnd_toEndOf="@id/progressBarOne"
                app:layout_constraintStart_toStartOf="@+id/progressBarOne" />

            <ProgressBar
                android:id="@+id/progressBarTwo"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="60"
                android:progressDrawable="@drawable/custom_progressbar"
                app:layout_constraintStart_toEndOf="@id/progressBarOne"
                app:layout_constraintEnd_toStartOf="@id/progressBarThree"
                app:layout_constraintTop_toBottomOf="@+id/carNumberFeedback" />


            <TextView
                android:id="@+id/txtProgressTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="4,6"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignBottom="@+id/progressBarTwo"
                app:layout_constraintBottom_toBottomOf="@+id/progressBarTwo"
                app:layout_constraintEnd_toEndOf="@+id/progressBarTwo"
                app:layout_constraintStart_toStartOf="@+id/progressBarTwo"
                app:layout_constraintTop_toBottomOf="@+id/carNumberFeedback" />

            <TextView
                android:text="Поведение"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/progressBarTwo"
                app:layout_constraintEnd_toEndOf="@id/progressBarTwo"
                app:layout_constraintStart_toStartOf="@+id/progressBarTwo" />

            <ProgressBar
                android:id="@+id/progressBarThree"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="60"
                android:progressDrawable="@drawable/custom_progressbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carNumberFeedback" />


            <TextView
                android:id="@+id/txtProgressThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="4,6"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignBottom="@+id/progressBarThree"
                app:layout_constraintBottom_toBottomOf="@+id/progressBarThree"
                app:layout_constraintEnd_toEndOf="@+id/progressBarThree"
                app:layout_constraintStart_toStartOf="@+id/progressBarThree"
                app:layout_constraintTop_toBottomOf="@+id/carNumberFeedback" />

            <TextView
                android:text="Аккуратность"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/progressBarThree"
                app:layout_constraintEnd_toEndOf="@id/progressBarThree"
                app:layout_constraintStart_toStartOf="@+id/progressBarThree" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtFeedbackCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="Все отзывы 35"
        app:layout_constraintStart_toStartOf="@id/cardThreeFeedback"
        app:layout_constraintTop_toBottomOf="@id/cardThreeFeedback"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFeedback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cardThreeFeedback"
        app:layout_constraintStart_toStartOf="@id/cardThreeFeedback"
        app:layout_constraintTop_toBottomOf="@+id/txtFeedbackCount"
        tools:listitem="@layout/item_feedback"/>

    <TextView
        android:id="@+id/txtEmptyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пока еще никто не оставил отзыв"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerFeedback"
        app:layout_constraintEnd_toEndOf="@+id/recyclerFeedback"
        app:layout_constraintStart_toStartOf="@+id/recyclerFeedback"
        app:layout_constraintTop_toTopOf="@id/recyclerFeedback" />


</androidx.constraintlayout.widget.ConstraintLayout>